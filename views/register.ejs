<%- include ('partials/notification') %>
    <div class="row mt-5">
        <div class="col-md-4 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                    <i class="fas fa-user-plus"></i> Register
                </h1>
                <%- include ('partials/message') %>
                    <form action="/users/register" method="POST">
                        <div class="form-group">
                            <label for="fName">First Name</label>
                            <input type="name" id="fName" name="fName" class="form-control"
                                placeholder="Enter First Name"
                                value="<%= typeof fName != 'undefined' ? fName : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="lName">Last Name</label>
                            <input type="name" id="lName" name="lName" class="form-control"
                                placeholder="Enter Last Name" value="<%= typeof lName != 'undefined' ? lName : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                                value="<%= typeof email != 'undefined' ? email : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="Create Password"
                                value="<%= typeof password != 'undefined' ? password : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="password2">Confirm Password</label>
                            <input type="password" id="password2" name="password2" class="form-control"
                                placeholder="Confirm Password"
                                value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Register
                        </button>
                    </form>
                    <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
            </div>
        </div>
    </div>